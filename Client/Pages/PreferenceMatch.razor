@page "/userpage/preferences"
@inject NavigationManager NavigationManager

<div class="padding-div">
<h1>Your preferences</h1>

<p>Which language do you prefer?</p>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="language" id="english" value="1">
  <label class="form-check-label" for="english">English</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="language" id="danish" value="2">
  <label class="form-check-label" for="danish">Danish</label>
</div>

<br>
<br>
<br>

<p>How many hours do you intend to work on the project weekly?</p>
<div class="form-check">
  <input class="form-check-input" type="radio" name="workHours" id="below15" value="1">
  <label class="form-check-label" for="workHours">
    Less than 15
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="workHours" id="15to25" value="2">
  <label class="form-check-label" for="workHours">
    Between 15 and 25
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="workHours" id="over25" value="3">
  <label class="form-check-label" for="workHours">
    Over 25
  </label>
</div>

<br>
<br>

<p>Which day would you prefer to meet with your projects supervisor?</p>
<div class="form-check">
  <input class="form-check-input" type="radio" name="meetingDay" id="monday" value="1">
  <label class="form-check-label" for="meetingDay">
    Monday
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="meetingDay" id="tuesday" value="2">
  <label class="form-check-label" for="meetingDay">
    Tuesday
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="meetingDay" id="wednesday" value="3">
  <label class="form-check-label" for="meetingDay">
    Wednesday
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="meetingDay" id="thursday" value="4">
  <label class="form-check-label" for="meetingDay">
    Thursday
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="meetingDay" id="friday" value="5">
  <label class="form-check-label" for="meetingDay">
    Friday
  </label>
</div>

<br>
<br>

<p>Do you prefer to work online or on-site?</p>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="location" id="onsite" value="1">
  <label class="form-check-label" for="onsite">On Site</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="location" id="online" value="2">
  <label class="form-check-label" for="online">Online</label>
</div>
<br>
<br>
<br>

<p>Are you looking for a project or a thesis to write?</p>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="projectType" id="project" value="1">
  <label class="form-check-label" for="project">Project</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="projectType" id="Thesis" value="2">
  <label class="form-check-label" for="Thesis">Thesis</label>
</div>
<br>
<br>

<button class="btn button" @onclick="Return">Submit</button>
<br>
</div>

@code{
    private void Return(){
         var uri = $"{NavigationManager.BaseUri}userpage";
        NavigationManager.NavigateTo(uri);
    }
}